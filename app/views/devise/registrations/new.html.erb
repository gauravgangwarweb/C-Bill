<div class="w-[100%] h-[60px] bg-[#00E7FF] flex justify-center items-center text-white">
  <h2 class="m-0 tracking-wide text-2xl">SIGN UP</h2>
</div>

<div class="w-full mt-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field relative mb-4 px-3">
    <%= f.label :name, class: "leading-7 text-xl text-gray-600 font-extrabold" %><br />
    <%= f.text_field :name, class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-0 leading-8 transition-colors duration-200 ease-in-out" %>
  </div>

  <div class="field relative mb-4 px-3">
    <%= f.label :surname, class: "leading-7 text-xl text-gray-600 font-extrabold" %><br />
    <%= f.text_field :surname, class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-0 leading-8 transition-colors duration-200 ease-in-out" %>
  </div>

  <div class="field relative mb-4 px-3">
    <%= f.label :email, class: "leading-7 text-xl text-gray-600 font-extrabold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-0 leading-8 transition-colors duration-200 ease-in-out" %>
  </div>

  <div class="field relative mb-4 px-3">
    <%= f.label :password, class: "leading-7 text-xl text-gray-600 font-extrabold" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-0 leading-8 transition-colors duration-200 ease-in-out" %>
  </div>

  <div class="field relative mb-4 px-3">
    <%= f.label :password_confirmation, class: "leading-7 text-xl text-gray-600 font-extrabold" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-0 leading-8 transition-colors duration-200 ease-in-out" %>
  </div>

  <div class="flex flex-col items-center w-[100%] mt-3">
  <div class="actions">
    <%= f.submit "Sign up", class: "bg-[#00e7ff] hover:bg-blue-600 text-white font-bold py-4 rounded flex justify-center px-40" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>

<div class="absolute bottom-0 flex justify-center w-full">
  <p>Made with ❤️ by Gaurav Gangwar</p>
</div>